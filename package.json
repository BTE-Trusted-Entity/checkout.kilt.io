{
  "repository": "git@github.com:BTE-Trusted-Entity/checkout.kilt.io.git",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": ">= v18.13.0"
  },
  "scripts": {
    "prettify": "prettier --write \"src/**/*.ts*\"",
    "lint": "yarn run lint-css && yarn run lint-js",
    "lint-js": "eslint --max-warnings 0 --config ./.eslintrc.json \"src/**/*.ts*\"",
    "lint-css": "stylelint \"src/**/*.css\"",
    "fix-css": "stylelint --fix \"src/**/*.css\"",
    "css": "tcm --namedExports --pattern 'src/frontend/**/*.module.css' && eslint --fix --config ./.eslintrc.json \"src/**/*.css.d.ts\"",
    "test": "tsc --noEmit && jest",
    "dev": "yarn parcel watch",
    "build": "rm -rf dist && NODE_OPTIONS=--no-experimental-fetch yarn parcel build",
    "start": "node --enable-source-maps dist/backend/server.js",
    "dev-start": "echo '{\"type\":\"commonjs\"}' > dist/package.json && supervisor --watch dist/backend/ --enable-source-maps dist/backend/server.js",
    "storybook": "start-storybook --port 6007 --modern"
  },
  "dependencies": {
    "@hapi/basic": "^7.0.1",
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.0",
    "@hapi/inert": "^7.0.1",
    "@kiltprotocol/config": "^0.31.1",
    "@kiltprotocol/core": "^0.31.1",
    "@kiltprotocol/utils": "^0.31.1",
    "@paypal/react-paypal-js": "^7.8.2",
    "@polkadot/ui-shared": "^2.12.1",
    "aws-sdk": "^2.1327.0",
    "dotenv": "^16.0.3",
    "exiting": "^6.1.0",
    "got": "^11.8.6",
    "hapi-dev-errors": "^4.0.0",
    "hapi-pino": "^11.0.1",
    "ky": "^0.33.2",
    "nodemailer": "^6.9.1",
    "pino": "^8.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@jest/globals": "^29.4.3",
    "@paypal/paypal-js": "^5.1.4",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-console": "^1.2.3",
    "@storybook/addon-controls": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addon-toolbars": "^6.5.16",
    "@storybook/addon-viewport": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/hapi__basic": "^5.1.3",
    "@types/hapi__hapi": "^20.0.13",
    "@types/hapi__inert": "^5.2.6",
    "@types/jest": "^29.4.0",
    "@types/nodemailer": "^6.4.7",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "hapi-dev-errors": "^4.0.0",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "os-browserify": "^0.3.0",
    "parcel": "^2.7.0",
    "path-browserify": "^1.0.1",
    "pino-pretty": "^9.4.0",
    "prettier": "^2.8.4",
    "stream-browserify": "^3.0.0",
    "stylelint": "^15.2.0",
    "stylelint-config-css-modules": "^4.2.0",
    "stylelint-config-standard": "^30.0.1",
    "supervisor": "^0.12.0",
    "ts-jest": "^29.0.5",
    "typed-css-modules": "^0.7.2",
    "typescript": "^4.9.5"
  },
  "targets": {
    "frontend": {
      "context": "browser",
      "engines": {
        "browsers": "> 0.5%, last 2 versions, not dead"
      },
      "source": [
        "src/frontend/index.html",
        "src/frontend/terms.html",
        "src/frontend/privacy.html",
        "src/frontend/imprint.html"
      ],
      "distDir": "dist/frontend"
    },
    "backend": {
      "context": "node",
      "source": "src/backend/server.ts",
      "distDir": "dist/backend",
      "outputFormat": "esmodule"
    }
  }
}
